extends ../layout

block content
  div(class='container')
    h1(class='colorAzul')='Iniciar Sesión'
    hr(class="featurette-divider")
    div(class= 'col-md-6 col-md-offset-3')
      div(class='panel panel-default')
          div(class='panel-heading')='Iniciar Sesión:'
          div(class='panel-body')
            div(class='form-nuevoproducto')
              form(class="" action='http://localhost:3000/usuarios/inicioSesion' method='post')
                div(class='form-group')
                  label(for='username')='Correo Electrónico'
                  input(class='form-control' type= 'username' name='username' placeholder='ejemplo@loquesea.com')
                div(class='form-group')
                  label(for='password')='Contraseña'
                  input(class='form-control' type= 'password' name='password' placeholder='Contraseña')
                button(type='submit' class='btn btn-default' id='enviar')='Iniciar Sesión'